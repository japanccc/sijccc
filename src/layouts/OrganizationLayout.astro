---
import BaseHead from "@components/common/BaseHead.astro";
import Footer from "@components/common/Footer.astro";
import Header from "@components/common/Header.astro";

// custom css
import "@/styles/theme.css";

import SEO from "../components/SEO.astro";
interface Props {
  title: string;
  description: string;
  ogImage?: string;
  canonicalURL?: string;
}
const {
  title,
  description = "一生涯の友と一生涯の成長を:日本キャンパスクルセードフォークライスト",
  ogImage = "/images/og-image.jpg",
  canonicalURL = Astro.url.href,
} = Astro.props;
const pageType = "jccc";
---

<!doctype html>
<html lang="jp">
  <head>
    <BaseHead
      title={title}
      description={description}
      ogImage={ogImage}
      canonicalURL={canonicalURL.toString()}
    />
    <SEO title={title} description={description} pageType={pageType} />
  </head>
  <body
    data-mobile-nav-trigger-alignment="right"
    data-mobile-nav-style="modern"
    data-mobile-nav-bg-color="#1d1d1d"
  >
    <Header />
    <slot />
    <Footer />
    <script is:inline src="/js/vendors/jquery.min.js"></script>
    <script is:inline src="/js/vendors.min.js"></script>
    <script is:inline src="/js/main.js"></script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
