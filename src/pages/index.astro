// src/pages/index.astro
import { DOMAINS, getCurrentDomain } from "@/utils/domainUtils";

// Determine which domain we're on
const domain = getCurrentDomain(Astro.request);
const isStudentDomain = domain === DOMAINS.STUDENT;

// Redirect to the appropriate page based on domain
if (isStudentDomain) {
  return Astro.redirect("/student-home");
} else {
  return Astro.redirect("/organization-home");
}
